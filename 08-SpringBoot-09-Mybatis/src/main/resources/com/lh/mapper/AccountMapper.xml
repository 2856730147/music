<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lh.dao.AccountDao">
  <update id="increase">
      update account set money=money+#{monet} where  id=#{id}
  </update>
    <update id="decrease">
        update account set money=money-#{monet} where  id=#{id}
    </update>
</mapper>